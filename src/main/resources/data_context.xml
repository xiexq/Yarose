<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jee="http://www.springframework.org/schema/jee" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd  http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.0.xsd">  
  <jee:jndi-lookup id="dataSource" jndi-name="${data.source}"/>  
  <bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean"> 
    <property name="dataSource" ref="dataSource"/>  
    <property name="mappingResources"> 
      <list> 
        <value>cn/com/eduedu/jee/security/account/Account.hbm.xml</value>  
        <value>cn/com/eduedu/jee/security/account/Access.hbm.xml</value>  
        <!--  
        <value>cn/com/yarose/Example.hbm.xml</value>
        -->
      </list> 
    </property>  
    <property name="hibernateProperties"> 
      <props> 
        <prop key="hibernate.dialect">${hibernate.dialect}</prop>  
        <prop key="hibernate.jdbc.batch_size">20</prop>  
        <prop key="hibernate.show_sql">${hibernate.show_sql}</prop>  
        <prop key="hibernate.connection.isolation">2</prop>  
        <prop key="hibernate.jdbc.use_streams_for_binary">true</prop>  
        <prop key="hibernate.hbm2ddl.auto">${hibernate.hbm2ddl.auto}</prop>  
        <prop key="hibernate.connection.release_mode">${hibernate.connection.release_mode}</prop>  
        <prop key="hibernate.current_session_context_class">thread</prop>  
        <prop key="hibernate.transaction.factory_class">${hibernate.transaction.factory_class}</prop>  
        <prop key="javax.persistence.validation.mode">${hibernate.validation.mode}</prop> 
      </props> 
    </property> 
  </bean>  
  <bean id="txManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager"> 
    <property name="sessionFactory" ref="sessionFactory"/> 
  </bean> 
  <!--  
  <bean id="exampleDao" class="cn.com.yarose.dao.ExampleDaoHibernateImpl">
  	<property name="sessionFactory" ref="sessionFactory"/>
  </bean>
  -->
</beans>
