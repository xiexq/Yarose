<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cn.com.yarose.base" auto-import="false">
	<class name="TeacherManager" table="t_teachermanager" lazy="true">
		<id name="id" column="id" type="long">
			<generator class="native">
				<param name="sequence">s_teachermanager_id</param>
			</generator>
		</id>
		<many-to-one class="cn.com.eduedu.jee.security.account.Account" name="teacher"
			column="teacher_id" not-null="true" lazy="false"></many-to-one>
		<many-to-one class="cn.com.yarose.base.Course" name="course"
			column="course_id" not-null="true" lazy="false"></many-to-one>
		<many-to-one class="cn.com.yarose.base.Shop" name="shop"
			column="shop_id" not-null="true" lazy="false"></many-to-one>
		<property name="authSourceId" column="auth_source_id"
				not-null="true" />
		<property name="authSourceAlias" column="auth_source_alias"
			length="100" not-null="true" />	
		<property name="beginTime" column="begin_time" type="timestamp"></property>
		<property name="endTime" column="end_time" type="timestamp"></property>
		<property name="createTime" column="create_time" type="timestamp"
			update="false" />
	</class>
	<query name="TeacherManager.listByCourseId"><![CDATA[from cn.com.yarose.base.TeacherManager tm  where tm.course.id=? order by tm.createTime desc]]></query>
	<query name="TeacherManager.countTeacherAllManagers"><![CDATA[select count(tm.id) from cn.com.yarose.base.TeacherManager tm  where tm.course.id=?]]></query>
	<query name="TeacherManager.listByShopId"><![CDATA[from cn.com.yarose.base.TeacherManager tm  where tm.shop.id=? order by tm.createTime desc]]></query>
	<query name="TeacherManager.listByShopAndDay"><![CDATA[from cn.com.yarose.base.TeacherManager tm  where tm.shop.id=? and tm.beginTime >= ? and tm.endTime <= ?]]></query>
	<query name="TeacherManager.listByCourseId"><![CDATA[from cn.com.yarose.base.TeacherManager tm where tm.course.id=? order by tm.createTime desc]]></query>
</hibernate-mapping>