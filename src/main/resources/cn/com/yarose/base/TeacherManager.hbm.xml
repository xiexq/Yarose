<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cn.com.yarose.base" auto-import="false">
	<class name="TeacherManager" table="t_teachermanager" lazy="true">
		<id name="id" column="id" type="long">
			<generator class="native">
				<param name="sequence">s_teachermanager_id</param>
			</generator>
		</id>
		<property name="courseId" column="course_Id" not-null="true"></property>
		<property name="shopId" column="shop_id" not-null="true"></property>
		<property name="accountId" column="account_id" not-null="true" />
				
		<property name="userId" column="user_id" length="100"
			not-null="true" />
		<property name="authSourceId" column="auth_source_id"
				not-null="true" />
		<property name="authSourceAlias" column="auth_source_alias"
			length="100" not-null="true" />	
		<property name="beginTime" column="begin_time" type="timestamp"></property>
		<property name="endTime" column="end_time" type="timestamp"></property>
		<property name="createTime" column="create_time" type="timestamp"
			update="false" />
	</class>
	<query name="TeacherManager.listByCourseId"><![CDATA[from cn.com.yarose.base.TeacherManager tm  where tm.courseId=? order by tm.createTime desc]]></query>
	<query name="TeacherManager.countTeacherAllManagers"><![CDATA[select count(tm.id) from cn.com.yarose.base.TeacherManager tm  where tm.courseId=?]]></query>
	<query name="TeacherManager.listByShopId"><![CDATA[from cn.com.yarose.base.TeacherManager tm  where tm.shopId=? order by tm.createTime desc]]></query>
		
</hibernate-mapping>