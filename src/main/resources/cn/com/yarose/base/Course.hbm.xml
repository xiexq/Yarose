<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cn.com.yarose.base" auto-import="false">
	<class name="Course" table="t_course" lazy="true">
		<id name="id" column="id" type="long">
			<generator class="native">
				<param name="sequence">s_course_id</param>
			</generator>
		</id>
		<property name="dicId" column="dic_id" not-null="true"></property>
		<property name="shopId" column="shop_id" not-null="true"></property>
		<property name="name" column="name" not-null="true"></property>
		<property name="desc" column="description"></property>
	</class>
	<query name="Course.listByShopId">from cn.com.yarose.base.Course as c where c.shopId = ?</query>
</hibernate-mapping>